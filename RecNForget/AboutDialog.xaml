                <Hyperlink NavigateUri="https://www.onlinewebfonts.com/icon/1314" RequestNavigate="Hyperlink_RequestNavigate" TextDecorations="None">
                    onlinewebfonts.com/icon/1314 (question mark icon)
                </Hyperlink>
                <LineBreak/>
            </TextBlock>
        </ScrollViewer>
        <Button Grid.Row="15" Grid.Column="0" Name="CheckForUpdateButton" Content="Check for Updates" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" Click="CheckForUpdateButton_Click"/>
        <Button Grid.Row="15" Grid.Column="3" Name="OKButton" Content="OK" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" Click="OKButton_Click"/>
    </Grid>
