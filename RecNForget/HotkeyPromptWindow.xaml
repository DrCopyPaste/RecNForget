<Window x:Class="RecNForget.HotkeyPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecNForget"
        mc:Ignorable="d"
        Topmost="True"
        Title="RecNForget - Configure hotkey" Style="{StaticResource DefaultWindowStyle}">
    <!-- Try to follow this node convention: (pretty much: everything that defines the grid coordinates comes first and ONLY style,
	everything that is not defined by style must not be in the opening tags starting line
	
        <NodeNme Grid.Row="0" Grid.Column="0" Grid.RowSpan="optional" Grid.ColSpan="optional" Style="{StaticResource DefaultButtonStyle}"
            ...custom style definitions...
			...
            Name="ControlName" Visibility="optional" Click="ClickEvent" ...event definitions...
			Content/Text/Value="optional">
        </NodeName>
        -->
    <Border Style="{StaticResource DefaultWindowBorderStyle}">
        <Grid
            Background="{Binding Source={StaticResource Application_Background_Color}}"
            MouseDown="Window_MouseDown">
            <Grid.RowDefinitions>
                <!-- row 0 for title bar-->
                <RowDefinition
                    Height="*"/>
                <!-- row 1 prompt message-->
                <RowDefinition
                    Height="*"/>
                <!-- row 2 spacing-->
                <RowDefinition
                    Height="{Binding Source={StaticResource SeparatorTitleRow_Height}}"/>
                <!-- row 3 hotkey display-->
                <RowDefinition
                    Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="{Binding Source={StaticResource MainWindow_Width}}" />
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource TitleBarLayout}"/>

            <TextBlock Grid.Row="1" Grid.Column="0"
                FontSize="14" Margin="5,0,0,0" TextWrapping="Wrap"
                Text="Hold down all modifier keys you wish to set and add your preferred hotkey." />

            <StackPanel Grid.Row="3" Grid.Column="0"
                HorizontalAlignment="Center"
                x:Name="HotkeyDisplay">
            </StackPanel>
        </Grid>
    </Border>
</Window>
