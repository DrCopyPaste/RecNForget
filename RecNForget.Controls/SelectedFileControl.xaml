<UserControl x:Class="RecNForget.Controls.SelectedFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecNForget.Controls"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes\Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Border Style="{StaticResource DefaultControlBorderStyle}">
            <Grid Style="{StaticResource DefaultGridStyle}">
                <Grid.RowDefinitions>
                    <RowDefinition Style="{StaticResource GrowForContainedControlsRowStyle}" />
                    <RowDefinition Style="{StaticResource GrowForContainedControlsRowStyle}" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="13*" />
                    <ColumnDefinition
                        Width="{Binding Source={StaticResource MainWindowControl_HeightWithMargin}}" />
                    <ColumnDefinition
                        Width="{Binding Source={StaticResource MainWindowControl_HeightWithMargin}}" />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource ControlLabelStyle}"
                    Content="Selected file" />

                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource ControlLabelStyle}"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Right"
                    d:Content="00:12.235s (237.98 kB)"
                    Name="FileInfoLabel" />

                <TextBox Grid.Row="1" Grid.Column="0" Style="{StaticResource MainWindowTextBoxStyle}"
                    Text="{Binding Path=SelectedFileService.SelectedFileDisplay, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    d:Text="C:\YourPath\yourFile.wav" />

                <local:SvgImageButton1 Grid.Row="1" Grid.Column="1" Style="{StaticResource SvgChangeFilePatternMiniButtonLayout}"
                    ToolTip="rename selected file (Hotkey: [Return])"
                    IsEnabled="{Binding SelectedFileService.HasSelectedFile}"
                    x:Name="ChangeSelectedFileNameButton" Click="ChangeSelectedFileNameButton_Clicked"/>

                <local:SvgImageButton1 Grid.Row="1" Grid.Column="2" Style="{StaticResource SvgDeleteSelectedFileMiniButtonLayout}"
                    ToolTip="delete selected file (Hotkey: [Delete])"
                    IsEnabled="{Binding SelectedFileService.HasSelectedFile}"
                    x:Name="DeleteSelectedFileButton" Click="DeleteSelectedFileButton_Clicked"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
