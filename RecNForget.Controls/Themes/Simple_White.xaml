                            <Setter TargetName="ImageContent" Property="OverrideColor" Value="{DynamicResource SecondaryShade_Color}" />
                            <Setter TargetName="ImageButtonBorder" Property="Background" Value="{DynamicResource Secondary_Brush}" />
                            <Setter TargetName="ImageButtonBorder" Property="BorderBrush" Value="{DynamicResource Secondary_Brush}" />
                            <Setter Property="Background" Value="{DynamicResource Secondary_Brush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

