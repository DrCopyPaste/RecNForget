                            <Setter Property="Background" TargetName="MenuItemBorder" Value="{DynamicResource SecondaryShade_Brush}"/>
                            <Setter Property="BorderBrush" TargetName="MenuItemBorder" Value="{DynamicResource SecondaryShade_Brush}"/>
